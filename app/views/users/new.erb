<div class="container">

  <h1><a href='/'>Lets Get You Signed Up</a><h1>

  <%= erb :'/partials/_errors', locals: {errors: @errors} %>

  <form id="register" action="/users" method="POST">
    <div class="row username" >
      <input type="text" name="user[username]" placeholder="Username" required='true'></div>
    <div class="row pass">
      <input type="password" name="user[password]" placeholder="Password" required='true'></div>
    <input type="submit" name="" value="Register">
  </form>

  <% 10.times do %>
    <br>
  <% end %>

</div>
